    $run_env= {"JAVA_HOME" => "/opt/soft/openjdk1.8.0",
               "CLASSPATH" => ".:/opt/soft/openjdk1.8.0/jre/lib:/opt/soft/openjdk1.8.0/lib:/opt/soft/openjdk1.8.0/lib/tools.jar:/opt/soft/openjdk1.8.0/lib/dt.jar",
               "JAVA_OPTS" => ""
